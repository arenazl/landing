        body[data-theme="amber"] {
            --bg-main: #fefce8;
            --bg-secondary: #fef9c3;
            --bg-tertiary: #fef08a;
            --text-primary: #713f12;
            --text-secondary: #92400e;
            --text-tertiary: #a16207;
            --border-color: #fde047;
            --card-bg: rgba(254, 252, 232, 0.95);
            --hero-gradient-from: #fef3c7;
            --hero-gradient-to: #fefce8;
            --primary: #f59e0b;
            --primary-dark: #d97706;
            --secondary: #f97316;
            --accent: #ea580c;
