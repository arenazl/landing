        .image-container::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
            pointer-events: none;
        }

        /* Parallax effect */
        .parallax {
            transform: translateZ(0);
            will-change: transform;
        }

        /* Phone mockup styles */
